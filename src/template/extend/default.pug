include ../partials/_variables
include ../partials/_mixins
include ../bemto/index

- var suffix = production ? '.min' : '';

doctype html
html(lang='ru')

	block variables
		-
			var title = defaultPageTitle;
			var preloader = daefaultPreloader;
			var footerWithoutUpBtn = defaultHeader;

	block head
		head
			meta(name='format-detection', content='telephone=no')
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(name='viewport', content='width=device-width, initial-scale=1.0')
			title= title
			link(href='static/css/index' + suffix + '.css', rel='stylesheet')
			link(rel='icon', type="image/png" href='static/favicon-32x32.png' sizes="32x32")
			link(rel='icon', type="image/png" href='static/favicon-16x16.png' sizes="16x16")
			link(rel='icon', href='static/favicon.ico')

	block body
		body.is-loading
			if preloader
				include ../components/preloader

			// SVG
			block svg
				div.svg-container(style="position: absolute; width: 0; height: 0; overflow: hidden;")
					include ../partials/_sprite.svg

			// picture element HTML5 shiv
			block inlineScripts
				script.
					document.createElement('picture');

			// Header
			block header
				- classNameHeader = 'is-fixed'
				include ../components/header

			// Main content
			block main

			// Footer
			block footer

			// Scripts
			block scripts
				script(src='static/js/index.jquery' + suffix + '.js')
				script(src='static/js/index' + suffix + '.js')