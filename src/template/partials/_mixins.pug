//- SVG (include from sprite)
mixin svg(icon, className)
	svg(class = `icon-${icon} ${className || ''}`)
		use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href=`#icon-${icon}`)

mixin i(icon)
	svg(class= `icon icon-${icon}`)
		use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href=`#icon-${icon}`)

mixin btn(text, btnClass, icon, el, type, href)
	+b(el ? {tag: el} : '').btn(class= btnClass ? btnClass : '' type= type ? type: false href= href ? href : false)
		+e.bg
			+e.bg-left
			+e.bg-right
		+e.inner
			if icon
				+e.icon
					if icon !== 'icon'
						+i(icon)
					else
						+e.icon-in
			if text
				+e.SPAN.text= text

